<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/attractions.css" />
    <link rel="stylesheet" href="/css/buttons/button.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/scroll-top.css">
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
    <script defer src="/scripts/scroll-top.js"></script>
    <title>Visit Florin County</title>
</head>

<body>

    <button onclick="topFunction()" id="myBtn" class="button" title="Go to top">Back to Top</button>

    <header>
        <h1 class="logo" onclick="location.href='/'"> Florin County </h1>
        <nav class="nav">
            <a href="/users/dashboard"><button class="button" role="button">Dashboard</button></a>
            <a href="/users/logout"><button class="button" role="button">Logout</button></a>
        </nav>
    </header>

    <h1 id="page-title">Local Attractions</h1>

    <div class="image-container">
        <% attractions.forEach(function(attraction){ %>
            <div class="image-wrapper">
                <img src="<%= attraction.location_url %>" alt="<%= attraction.name %>" />
                <div class="image-overlay">
                    <div class="image-text">
                        <h1>
                            <%= attraction.name %>
                        </h1>
                    </div>
                </div>
            </div>
            <p id="location-description">
                <%= attraction.description %>
            </p>
            <br />
            <hr>
            <br />
            <br />
            <% }); %>
    </div>
</body>
</html>
