<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <a href="/library">Return</a>
    <br />

    <p>My Books</p>

    <ul>
        <% books.forEach(function(book){ %>
            <form action="/library/<%= book.id %>/return" method="POST">
                <li>
                    <%= book.book_name %> - <%= book.author %> (<%= book.year %>) <% if(!book.complete) { %> <button
                                        type="submit">Return</button>
                                    <% } %>
                </li>
            </form>

            <% }); %>
    </ul>
</body>

</html>
